<!DOCTYPE html>
<html lang="en">
<head>
<%- include('partials/head'); %>
</head>
<body>
    <%- include('partials/navbar'); %>
    <div class="container">
        <h1 class=" mt-5">Admin Login</h1>
        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
               <%= error %>
            </div>
        <% }  %>
        <form method="POST" action="/login" class="my-3" >
            <div class="form-group">
                <label for="email">Email address <sup class="text-danger">*</sup></label>
                <input 
                    type="email" 
                    class="form-control <%= locals.email ? 'is-invalid' : '' %>" 
                    id="email"
                    maxlength="128" 
                    placeholder="name@example.com" 
                    name="email"
                    value = "<%= locals.formDataEmail %>"
                    required
                >
            </div>
            <div class="form-group">
                <label for="password">Password <sup class="text-danger">*</sup></label>
                <input 
                    type="password" 
                    class="form-control <%= locals.password ? 'is-invalid' : '' %>" 
                    id="password" 
                    name="password"
                    value = "<%= locals.formDataPassword %>"
                    required
                >
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>



    <%- include('partials/footer'); %>
</body>
</html>