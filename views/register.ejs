<!DOCTYPE html>
<html lang="en">
<head>
<%- include('partials/head'); %>
</head>
<body>
    <%- include('partials/navbar'); %>
    <div class="container">
        <h1 class=" mt-5">Admin Registration</h1>
        <% if (locals.message) { %>
            <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %>" role="alert">
               <%= message %>
            </div>
        <% } %>
        <form method="POST" action="/register" class="my-3">
            <div class="form-group">
                <label for="name">Name <sup class="text-danger">*</sup> </label>
                <input 
                  type="text"
                  class="form-control <%= locals.name ? 'is-invalid' : '' %>"
                  id="name" 
                  name="name"
                  placeholder="username"
                  minlength="2"
                  maxlength="64"
                  value = "<%= locals.formDataName %>"
                  required
                >
                <% if (locals.name) { %>
                    <div class="invalid-feedback">
                       <%= locals.name %>
                    </div>
                <% } %>
            </div>
            <div class="form-group">
                <label for="email">Email address <sup class="text-danger">*</sup></label>
                <input 
                    type="email" 
                    class="form-control <%= locals.email ? 'is-invalid' : '' %>" 
                    id="email"
                    maxlength="128" 
                    placeholder="name@example.com" 
                    name="email"
                    value = "<%= locals.formDataEmail %>"
                    required
                >
                <% if (locals.email) { %>
                    <div class="invalid-feedback">
                       <%= locals.email %>
                    </div>
                <% } %>
            </div>
            <div class="form-group">
                <label for="password">Password <sup class="text-danger">*</sup></label>
                <input 
                    type="password" 
                    class="form-control <%= locals.password ? 'is-invalid' : '' %>" 
                    id="password" 
                    name="password"
                    value = "<%= locals.formDataPassword %>"
                    required
                >
                <% if (locals.password) { %>
                    <div class="invalid-feedback">
                       <%= locals.password %>
                    </div>
                <% } %>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>



    <%- include('partials/footer'); %>
</body>
</html>